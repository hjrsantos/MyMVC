<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    <link type="text/css" href=" @Url.Content("~/Styles/bootstrap.css")" rel="Stylesheet" />
    <link type="text/css" href="@Url.Content("~/Styles/bootstrap-responsive.min.css")" rel="Stylesheet" />
    <link href="//netdna.bootstrapcdn.com/font-awesome/3.2.1/css/font-awesome.css" rel="stylesheet" />


    <script type="text/javascript" src="@Url.Content("~/Scripts/jquery-1.7.1.min.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Scripts/bootstrap.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Scripts/bootstrap-modal.js")"></script>
    <script type="text/javascript">
        $(document).ready(function () {


        });
        
        isNUllOrEmpty = function (text) {

            if (text == undefined || text == null || text == "")
                return true;

            return false;
        
        }
    </script>
    <style type="text/css">
        .table th
        {
            border-top:0px;    
        }
    </style>
</head>
<body>

    <div class="container" style="margin-top: 25px; background-color: rgb(187, 216, 233); padding: 10px;">
        <div class="row-fluid">
            <div class="span6">
                <a class="btn btn-large btn-danger" href="/">
                    <i class="icon-book icon-2x pull-left"></i> Daily Organizer<br>v0.0.1
                </a>
            </div>
            
            @if (Request.IsAuthenticated)
            {
                <text>
                    <div class="span3">
                        <div class="pull-right" style=" padding-top:25px;">
                            Hello, @Html.ActionLink(User.Identity.Name,"Index","Todo")
                        </div>
                    </div>
                    <div class="span3">
                        <div style=" padding-top:25px;">
                            @using (Html.BeginForm("Signout", "Account", FormMethod.Post, new { id = "logoutForm" }))
                            {
                                @Html.AntiForgeryToken()
                                <a href="javascript:document.getElementById('logoutForm').submit()">Log off</a>
                            }
                        </div>
                    </div>
                </text>            
            }
        </div>
    </div>
    <div class="container">
        @RenderBody()
    </div>
</body>
</html>
